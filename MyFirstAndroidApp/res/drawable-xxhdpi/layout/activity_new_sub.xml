<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/layout_bg"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".SecondActivity" >
    
<RelativeLayout 
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/layout_bg"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
     >

    <TableLayout
        android:id="@+id/tableLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="10dp" >

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dip"
            android:background="@android:color/white" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="110dp"
                android:layout_height="40dp"
                android:layout_alignParentLeft="true"
                android:layout_alignTop="@+id/tableLayout1"
                android:layout_margin="2dip"
                android:background="@android:color/black"
                android:padding="5dp"
                android:text="Player"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:layout_margin="2dip"
                android:background="@android:color/black"
                android:padding="5dp"
                android:text="balance"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@android:color/white" >
            </TextView>

            <TextView
                android:id="@+id/textView3"
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:layout_margin="2dip"
                android:background="@android:color/black"
                android:padding="5dp"
                android:text="score"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@android:color/white" >
            </TextView>
        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dip"
            android:background="@android:color/white" >

            <Button
                android:id="@+id/player1View"
                android:layout_width="110dp"
                android:layout_height="40dp"
                android:layout_alignParentLeft="true"
                android:layout_alignTop="@+id/tableLayout1"
                android:layout_margin="2dip"
                android:background="@android:color/black"
                android:padding="5dp"
                android:text=""
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/player1BalanceView"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:layout_margin="2dip"
                android:background="@android:color/black"
                android:padding="5dp"
                android:text="0"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@android:color/white" >
            </TextView>

            <EditText
                android:id="@+id/player1ScoreView"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_margin="2dip"
                android:background="@android:color/black"
                android:padding="5dp"
                android:text="0"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@android:color/white" 
                android:inputType="number">
            </EditText>
        </TableRow>

        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dip"
            android:background="@android:color/white" >

            <Button
                android:id="@+id/player2View"
                android:layout_width="110dp"
                android:layout_height="40dp"
                android:layout_alignParentLeft="true"
                android:layout_alignTop="@+id/tableLayout1"
                android:layout_margin="2dip"
                android:background="@android:color/black"
                android:padding="5dp"
                android:text=""
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/player2BalanceView"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:layout_margin="2dip"
                android:background="@android:color/black"
                android:padding="5dp"
                android:text="0"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@android:color/white" >
            </TextView>

            <EditText
                android:id="@+id/player2ScoreView"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_margin="2dip"
                android:background="@android:color/black"
                android:padding="5dp"
                android:text="0"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@android:color/white"
                android:inputType="number" >
            </EditText>
        </TableRow>

        <TableRow
            android:id="@+id/tableRow4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dip"
            android:background="@android:color/white" >

            <Button
                android:id="@+id/player3View"
                android:layout_width="110dp"
                android:layout_height="40dp"
                android:layout_alignParentLeft="true"
                android:layout_alignTop="@+id/tableLayout1"
                android:layout_margin="2dip"
                android:background="@android:color/black"
                android:padding="5dp"
                android:text=""
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/player3BalanceView"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:layout_margin="2dip"
                android:background="@android:color/black"
                android:padding="5dp"
                android:text="0"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@android:color/white" >
            </TextView>

            <EditText
                android:id="@+id/player3ScoreView"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_margin="2dip"
                android:background="@android:color/black"
                android:padding="5dp"
                android:text="0"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@android:color/white" 
                android:inputType="number">
            </EditText>
        </TableRow>

        <TableRow
            android:id="@+id/tableRow5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dip"
            android:background="@android:color/white" >

            <Button
                android:id="@+id/player4View"
                android:layout_width="110dp"
                android:layout_height="40dp"
                android:layout_alignParentLeft="true"
                android:layout_alignTop="@+id/tableLayout1"
                android:layout_margin="2dip"
                android:background="@android:color/black"
                android:padding="5dp"
                android:text=""
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/player4BalanceView"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:layout_margin="2dip"
                android:background="@android:color/black"
                android:padding="5dp"
                android:text="0"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@android:color/white" >
            </TextView>

            <EditText
                android:id="@+id/player4ScoreView"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_margin="2dip"
                android:background="@android:color/black"
                android:padding="5dp"
                android:text="0"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@android:color/white" 
                android:inputType="number">
            </EditText>
        </TableRow>
    </TableLayout>

    <TableLayout
        android:id="@+id/tableLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tableLayout1"
        android:layout_below="@+id/tableLayout1"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="10dp" >

        <TableRow
            android:id="@+id/tableRow6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dip"
            android:background="@android:color/white" >

            <TextView
                android:id="@+id/teamAView"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:layout_margin="2dip"
                android:background="@android:color/black"
                android:padding="5dp"
                android:text="Team A"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@android:color/white" >
            </TextView>

            <TextView
                android:id="@+id/teamBView"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:layout_margin="2dip"
                android:background="@android:color/black"
                android:padding="5dp"
                android:text="Team B"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@android:color/white" >
            </TextView>
        </TableRow>

        <TableRow
            android:id="@+id/tableRow7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dip"
            android:background="@android:color/white" >

            <EditText
                android:id="@+id/teamAScoreEdit"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:layout_margin="2dip"
                android:background="@android:color/black"
                android:padding="5dp"
                android:text="0"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@android:color/white" >
            </EditText>

            <EditText
                android:id="@+id/teamBScoreEdit"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:layout_margin="2dip"
                android:background="@android:color/black"
                android:padding="5dp"
                android:text="0"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@android:color/white" >
            </EditText>
        </TableRow>
    </TableLayout>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tableLayout2"
        android:layout_below="@+id/tableLayout2"
        android:layout_marginTop="30dp"
        android:text="Hole"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@android:color/white" />
    
    <kankan.wheel.widget.WheelView android:id="@+id/HoleSelection"
        android:layout_height="70dp"
        android:layout_width="70dp"
        android:layout_gravity="center_vertical"
        android:layout_toRightOf="@+id/textView4"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/tableLayout2"
        android:layout_marginTop="10dp"      
        android:layout_weight="1"/>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tableLayout2"
        android:layout_toLeftOf="@+id/tableLayout2"
        android:text="Carried holes"
        android:layout_alignParentRight="true"
        android:background="@android:color/black"
        android:textColor="@android:color/white"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/carriedHoles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView5"
        android:layout_alignParentRight="true"
        
        android:text="0"
        android:background="@android:color/black"
        android:textColor="@android:color/white"
        
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <Button
        android:id="@+id/updateHoleButton"
        style="@style/btnStyleBeige"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_alignTop="@+id/HoleSelection"
        android:layout_toLeftOf="@+id/HoleSelection"
        android:layout_alignParentRight="true"
        android:text="Update" />

    <ImageButton
        android:id="@+id/goHomeButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@+id/updateHoleButton"
        android:layout_marginTop="5dp"
        android:layout_alignRight="@+id/updateHoleButton"
        android:layout_alignParentBottom="true"
        style="@style/btnStyleBeige"
        android:src="@android:drawable/ic_menu_revert" />

</RelativeLayout>
</ScrollView>